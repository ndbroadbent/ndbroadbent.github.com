!!!
%html
  %head
    %title {% if page.title %} {{ page.title }} | {% endif %} {{ site.title }}
    :plain
      <meta http-equiv="content-type" content="text/html; charset=utf-8" />
      <meta name="description" content="{% if page.excerpt %}{{ page.excerpt }}{% else %}{{ site.description }}{% endif %}" />
      <meta name="keywords" content="{% if page.keywords %}{{ page.keywords }}{% else %}{{ site.keywords }}{% endif %}" />
      <link href="http://feeds.feedburner.com/madebynathan" rel="alternate" title="{{ site.title }}" type="application/atom+xml" />
      <link href="/stylesheets/screen.css" media="screen, projection" rel="stylesheet" type="text/css" />
      <link href="/stylesheets/print.css" media="print" rel="stylesheet" type="text/css" />
      <!--[if lt IE 8]>
          <link href="/stylesheets/ie.css" media="screen, projection" rel="stylesheet" type="text/css" />
      <![endif]-->
      <link href="/stylesheets/syntax.css" media="screen, projection" rel="stylesheet" type="text/css" />
      <link href="http://fonts.googleapis.com/css?family=Amaranth:bold|Oswald:regular|Francois+One:regular|Arimo:regular|Droid+Sans:regular|Droid+Sans+Mono:regular" rel="stylesheet" type="text/css">
      <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.6.1/jquery.min.js"></script>
      <script src="http://cdnjs.cloudflare.com/ajax/libs/noisy/1.0/jquery.noisy.min.js"></script>
      <script src="http://ajax.aspnetcdn.com/ajax/jquery.templates/beta1/jquery.tmpl.min.js"></script>
      <script src="/javascripts/jquery.tweet.js"></script>
      <script src="/javascripts/application.js"></script>
      <script src="http://platform.twitter.com/widgets.js" type="text/javascript"></script>
      <script src="https://apis.google.com/js/plusone.js" type="text/javascript"></script>

  %body.bp.two-col
    #container
      #header
        #logo
          %h1 <a href="/">{{ site.title }}</a>
          %h2 {{ site.description }}
        #menu
          %ul
            %li <a href="http://github.com/ndbroadbent" target="blank">github</a>
            %li <a href="/projects">projects</a>
            %li <a href="/archive.html">archive</a>
            %li <a href="http://feeds.feedburner.com/madebynathan">rss</a>

      {{ content }}

      #footer
        powered by <a href="http://jekyllrb.com/" traget="blank">jekyll</a> and
        <a href="http://tapirgo.com/" traget="blank">Tapir</a>
        %br
        hosted by <a href="https://github.com" traget="blank">GitHub</a>

