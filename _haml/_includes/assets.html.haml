-# Uses development css & js when jekyll server is running (loaded from _assets.yml)
-# Uses production css & js when jekyll is compiling without server

-# CSS
-# -------------------------------------------------------------------------------

{% if site.server %}

- assets = YAML.load_file('_assets.yml')
- assets['stylesheets']['screen'].each do |screen_css|
  = %Q{<link href="/#{screen_css}" media="screen, projection" rel="stylesheet" type="text/css" />}

<link href="/stylesheets/print.css" media="print" rel="stylesheet" type="text/css" />
<!--[if lt IE 8]><link href="/stylesheets/ie.css" media="screen, projection" rel="stylesheet" type="text/css" /><![endif]-->

{% else %}

<link href="/assets/screen.css" media="screen, projection" rel="stylesheet" type="text/css" />
<link href="/assets/print.css" media="print" rel="stylesheet" type="text/css" />
<!--[if lt IE 8]><link href="/assets/ie.css" media="screen, projection" rel="stylesheet" type="text/css" /><![endif]-->

{% endif %}


-# Javascript
-# -------------------------------------------------------------------------------

<script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.6.1/jquery.min.js" type="text/javascript"></script>
<script src="http://cdnjs.cloudflare.com/ajax/libs/noisy/1.0/jquery.noisy.min.js" type="text/javascript"></script>
<script src="http://ajax.aspnetcdn.com/ajax/jquery.templates/beta1/jquery.tmpl.min.js" type="text/javascript"></script>

{% if site.server %}

- assets['javascripts']['application'].each do |js_file|
  = %Q{<script src="/#{js_file}" type="text/javascript"></script>}

{% else %}

<script src="/assets/application.js" type="text/javascript"></script>

{% endif %}

<script src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=ra-4e78a2905b551b31" type="text/javascript"></script>
<script src="http://platform.twitter.com/widgets.js" type="text/javascript"></script>

