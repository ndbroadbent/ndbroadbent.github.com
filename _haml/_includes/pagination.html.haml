.pagination
  {% if paginator.previous_page > 1 %}
  %h3.previous-page <a href="/page{{ paginator.previous_page }}">&lArr; Previous Page</a>
  {% elsif paginator.previous_page == 1 %}
  %h3.previous-page <a href="/">&lArr; Previous Page</a>
  {% endif %}

  {% if paginator.next_page < paginator.total_pages %}
  %h3.next-page <a href="/page{{ paginator.next_page }}">Next Page &rArr;</a>
  {% endif %}

